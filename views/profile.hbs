<div class="perfil">
  <h1>WIKI BOOK PROFILE</h1>
  <h2>"{{currentUser.username}}"</h2>
</div>

<div class="perfilphoto">
  <img src="{{currentUser.avatar}}" alt="">
  <a href="/pictureProfile/edit?id={{currentUser._id}}">EDIT</a>
</div>

<h3>Your Comments:</h3>

<div>
  {{#each comments}}
  <p>{{text}}</p>
  <a href="/commentProfile/edit?id={{_id}}">EDIT</a>
  <a href="/profile/delete?id={{_id}}">DELETE</a>
  {{/each}}

  <script>

    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
          const image = document.getElementById('usernamePic');
          image.setAttribute('src', e.target.result);
        };

        reader.readAsDataURL(input.files[0]);
      }
    }

  </script>
</div>

<h3>Your Favorite Books:</h3>

<div>
  {{#each user.favoriteBooks}}
  <img alt="{{title}}" src="{{image}}">
  <h2><a href="/title?title={{title}}">{{title}}</a></h2>
  <p>Published {{publication_date}} by {{publisher}}</p>
  <form action="/fave/delete/{{book._id}}" method="POST">
    <button type="submit">DELETE</button>
  </form>
  {{/each}}
</div>